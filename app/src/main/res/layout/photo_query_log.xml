<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/card"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/photo"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/loading"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/user_icon2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:shape="ring"
        android:src="@drawable/user_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintVertical_bias="0.098"
        app:shapeAppearance="@drawable/rounded_background" />

    <TextView
        android:id="@+id/user_chat2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_background"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:scrollbars="horizontal"
        android:textColor="?attr/colorAccent"
        android:textAlignment="gravity"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/user_icon2"
        app:layout_constraintTop_toTopOf="@id/user_icon2"
        app:layout_constraintBottom_toBottomOf="@id/user_icon2"
        tools:text="MyGenAI" />

    <TextView
        android:scrollbars="horizontal"
        android:textSize="15sp"
        android:textColor="?attr/colorAccent"
        android:textAlignment="center"
        android:id="@+id/ai_response2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:background="@drawable/chat_background"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constrainedWidth="true"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bot_icon2"
        app:layout_constraintTop_toTopOf="@id/bot_icon2"
        app:layout_constraintBottom_toBottomOf="@id/bot_icon2"
        tools:text="MyGenAI" />

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/loading"
            android:background="@drawable/chat_background"
            android:backgroundTint="?attr/colorPrimary"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bot_icon2"
            app:layout_constraintTop_toTopOf="@id/bot_icon2"
            app:layout_constraintBottom_toBottomOf="@id/bot_icon2" />

    <ImageView
        android:id="@+id/bot_icon2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_icon2"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/chatbot">
    </ImageView>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ai_response2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:backgroundTint="@color/light_blue"
        android:layout_height="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>